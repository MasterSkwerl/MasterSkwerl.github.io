{
  "name": "Extended User Info",
  "description": "Displays Extended Info in Issue View",
  "version": "2.2", 
  "key": "com.skwerlwerks.extendeduserinfo",
  "baseUrl": "https://masterskwerl.github.io/ExtendedUserInfo",
  "vendor": {
    "name": "SkwerlWerks",
    "url": "https://www.skwerlwerks.com"
  },
  "authentication": {
    "type": "none"
  },
  "modules": {
    "jiraEntityProperties": [
      {
            "name": {
                "value": "Custom Properties"
            },
            "key": "extended-user-info",        
            "entityType": "user",
            "keyConfigurations": [
            {
                "propertyKey": "custom",
                "extractions": [
                    {
                        "objectName": "company",
                        "type": "string",
                        "alias": "company"
                    },
                    {
                        "objectName": "vip",
                        "type": "string",
                        "alias": "vip"
                    }
                ]
            }
        ]
      }
    ],
    "jiraIssueGlances": [
      {
        "icon": {
          "width": 24,
          "height": 24,
          "url": "/user_icon_dark.svg"
        },
        "content": {
          "type": "label",
          "label": {
            "value": "Additional Information"
          }
        },
        "target": {
          "type": "web_panel",
          "url": "/reporter-details-panel.html"
        },
        "name": {
          "value": "Extended Details"
        },
        "key": "additional-details-glance"
      }
    ]
  },
  "scopes": [
    "READ",
    "WRITE"
  ]
}
