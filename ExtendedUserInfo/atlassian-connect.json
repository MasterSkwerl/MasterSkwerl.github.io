{
  "name": "Extended User Info",
  "description": "Displays Extended Info in Issue View",
  "apiVersion": 2, 
  "key": "com.skwerlwerks.extendeduserinfo",
  "baseUrl": "https://masterskwerl.github.io/ExtendedUserInfo",
  "vendor": {
    "name": "SkwerlWerks",
    "url": "https://www.skwerlwerks.com"
  },
  "authentication": {
    "type": "none"
  },
  "modules": {
    "jiraEntityProperties": [
      {
            "name": {
                "value": "Custom Properties"
            },
            "key": "attachment-entity-property",        
            "entityType": "user",
            "keyConfigurations": [
            {
                "propertyKey": "custom",
                "extractions": [
                    {
                        "objectName": "company",
                        "type": "string",
                        "alias": "company"
                    },
                    {
                        "objectName": "vip",
                        "type": "string",
                        "alias": "vip"
                    }
                ]
            }
        ]
      }
    ],
    "webSections": [
      {
          "key": "example-menu-section",
          "location": "system.user.hover.links",
          "name": {
              "value": "Example app name"
          }
      }
    ],
    "webItems": [
        {
            "key": "example-section-link",
            "location": "example-menu-section",
            "name": {
                "value": "Example app link"
            },
            "url": "/reporter-details-panel.html"
        }
    ],
    "serviceDeskPortalProfilePanels": [
      {
          "key": "sd-portal-profile-content",
          "url": "/reporter-details-panel.html"
      }
  ]
  },
  "scopes": [
    "READ",
    "WRITE"
  ]
}
